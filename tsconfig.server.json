{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist/server", // Not strictly needed for tsx, but good practice
    "rootDir": "./server",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] // Example if you need to import types from frontend
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
